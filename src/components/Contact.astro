---
import ReactForm from "../components/ReactForm.jsx";
import GoogleMap from "../components/GoogleMap.astro";
---

<section id="contacto" class="py-10 bg-gradient-to-b from-black to-gray-900">
  <div class="container mx-auto px-6">
    <h2
      class="text-4xl font-elegant font-bold text-center mb-12 text-[#c0a062]"
    >
      Contáctanos
    </h2>
    <div class="grid md:grid-cols-2 gap-10 items-start">
      <section>
        <h3 class="text-2xl font-semibold mb-6">Envíanos un Mensaje</h3>
        <ReactForm />
        <div id="react-form"></div>
      </section>
      <div class="space-y-6">
        <h3 class="text-2xl font-semibold mb-6">Información de Contacto</h3>
        <div class="flex items-start space-x-3">
          <i class="fas fa-map-marker-alt text-[#c0a062] mt-1 text-xl"></i>
          <div>
            <h4 class="font-semibold">Dirección</h4>
            <p class="text-gray-400">
              San Antonio, avenida Pedro J Ameglio. Plaza Aurora 2do piso.
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <i class="fas fa-phone text-[#c0a062] mt-1 text-xl"></i>
          <div>
            <h4 class="font-semibold">Teléfono</h4>
            <p class="text-gray-400">+507 6045-6542 / +507 6005-8708</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <i class="fas fa-envelope text-[#c0a062] mt-1 text-xl"></i>
          <div>
            <h4 class="font-semibold">Correo Electrónico</h4>
            <p class="text-gray-400">allongestudiopty@gmail.com</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <i class="fab fa-instagram text-[#c0a062] mt-1 text-xl"></i>
          <div>
            <h4 class="font-semibold">Instagram</h4>
            <a
              href="https://www.instagram.com/allongestudio/?hl=es-la"
              target="_blank"
              class="text-gray-400 hover:text-[#c0a062] hover-effect"
              >@allongestudio</a
            >
          </div>
        </div>
        <div
          class="mt-6 rounded-lg overflow-hidden shadow-lg border border-gray-700"
        >
          <GoogleMap
            apiKey="AIzaSyDNtV1ndkiUPSdFlcBTqvycMbEp_nlWtSE"
            latitude={9.0559518}
            longitude={-79.4479181}
            zoom={15}
          />
        </div>
      </div>
    </div>
  </div>
</section>
