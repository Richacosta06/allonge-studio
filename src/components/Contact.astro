---
import ReactForm from '../components/ReactForm.jsx';

---
<section id="contacto" class="py-20 bg-gradient-to-b from-black to-gray-900">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-elegant font-bold text-center mb-12 text-[#c0a062]">Contáctanos</h2>
    <div class="grid md:grid-cols-2 gap-10 items-start">
      <section>
        <h3 class="text-2xl font-semibold mb-6">Envíanos un Mensaje</h3>
        <ReactForm />
        <div id="react-form"></div>
      </section>
      <div class="space-y-6">
        <h3 class="text-2xl font-semibold mb-6">Información de Contacto</h3>
        <div class="flex items-start space-x-3">
          <i class="fas fa-map-marker-alt text-[#c0a062] mt-1 text-xl"></i>
          <div>
            <h4 class="font-semibold">Dirección</h4>
            <p class="text-gray-400">Tu Dirección Completa, Ciudad, País</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <i class="fas fa-phone text-[#c0a062] mt-1 text-xl"></i>
          <div>
            <h4 class="font-semibold">Teléfono</h4>
            <p class="text-gray-400">(+507) XXXX-XXXX</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <i class="fas fa-envelope text-[#c0a062] mt-1 text-xl"></i>
          <div>
            <h4 class="font-semibold">Correo Electrónico</h4>
            <p class="text-gray-400">info@allongestudio.com</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <i class="fab fa-instagram text-[#c0a062] mt-1 text-xl"></i>
          <div>
            <h4 class="font-semibold">Instagram</h4>
            <a href="https://www.instagram.com/allongestudio/?hl=es-la" target="_blank" class="text-gray-400 hover:text-[#c0a062] hover-effect">@allongestudio</a>
          </div>
        </div>
        <div class="mt-6 rounded-lg overflow-hidden shadow-lg border border-gray-700">
          <img src="https://placehold.co/600x300/1a1a1a/c0a062?text=Mapa+de+Ubicación" alt="Mapa de ubicación de Allonge Estudio" class="w-full h-auto object-cover">
        </div>
      </div>
    </div>
  </div>
</section>