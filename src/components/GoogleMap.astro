---
interface Props {
  apiKey: string;
  latitude: number;
  longitude: number;
  zoom?: number;
  width?: string;
  height?: string;
}

const {
  apiKey,
  latitude,
  longitude,
  zoom = 15,
  width = "100%",
  height = "400px",
} = Astro.props;
---

<div class="map-container">
  <iframe
    width={width}
    height={height}
    style="border:0"
    loading="lazy"
    allowfullscreen
    referrerpolicy="no-referrer-when-downgrade"
    src={`https://www.google.com/maps/embed/v1/place?key=${apiKey}&q=${latitude},${longitude}&zoom=${zoom}`}
  >
  </iframe>
</div>

<style>
  .map-container {
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow:
      0 4px 6px -1px rgb(0 0 0 / 0.1),
      0 2px 4px -2px rgb(0 0 0 / 0.1);
  }
</style>
